{
  "name": "gh-repo-cli",
  "version": "1.0.0",
  "description": "A lightweight CLI tool for analyzing GitHub repositories without API tokens",
  "main": "index.js",
  "bin": {
    "ghr": "./index.js"
  },
  "scripts": {
    "test": "npx jest@^29.7.0",
    "test:watch": "npx jest@^29.7.0 --watch",
    "test:coverage": "npx jest@^29.7.0 --coverage",
    "lint": "npx eslint@^8.57.0 *.js commands/**/*.js lib/**/*.js tests/**/*.js",
    "lint:fix": "npx eslint@^8.57.0 *.js commands/**/*.js lib/**/*.js tests/**/*.js --fix",
    "validate": "npm run lint && npm run test",
    "precommit": "npm run validate",
    "link": "npm link",
    "unlink": "npm unlink -g gh"
  },
  "keywords": [
    "github",
    "cli",
    "repository",
    "analyzer",
    "git",
    "code-analysis"
  ],
  "author": "syxc",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.3",
    "commander": "^11.0.0",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "jest": "^29.7.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/syxc/gh-repo-cli.git"
  },
  "bugs": {
    "url": "https://github.com/syxc/gh-repo-cli/issues"
  },
  "homepage": "https://github.com/syxc/gh-repo-cli#readme"
}
